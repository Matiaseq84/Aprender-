extends admin-panel-layout

block content
  h2(style="margin-bottom: 2rem") Alumnos por curso

  if coursesWithStudents.length
    each curso in coursesWithStudents 
      .course-block
        h3 #{curso.name}

        if curso.students.length
          table.table.table-bordered.table-striped
            thead
              tr
                th Nombre
                th Apellido
                th Email
            tbody
              each alumno in curso.students
                tr
                  td= alumno.studentName
                  td= alumno.studentLastname
                  td= alumno.email
        else
          .alert.alert-warning No hay alumnos inscriptos en este curso.
  else
    .alert.alert-info No hay cursos disponibles.
