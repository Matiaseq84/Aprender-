extends admin-panel-layout

block content
  h2 Buscar cursos

  form(action="/courses" method="GET")
    input(type="text" name="name" placeholder="Buscar por nombre del curso")
    input(type="text" name="teacher" placeholder="Buscar por docente")
    select(name="status")
      option(value="") Estado
      option(value="Activo") Activo
      option(value="Inactivo") Inactivo
    button(type="submit") Buscar

  if courses.length
    h3 Resultados
    ul
      each course in courses
        li #{course.name} | #{course.teacher} | #{course.status}
  else
    p No se encontraron cursos.

